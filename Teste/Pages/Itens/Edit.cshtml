@page "{id:int}"
@model Teste.Pages.Itens.EditModel
@{ ViewData["Title"] = "Editar Item"; }

<h1>Editar Item #@Model.Item.ItemId</h1>
<div class="row"><div class="col-md-6">
    <form method="post">
        <input type="hidden" asp-for="Item.ItemId" />
        <input type="hidden" asp-for="Item.OrderId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Item.ProductId" class="form-label"></label>
            <input asp-for="Item.ProductId" class="form-control" type="number" min="1" />
            <span asp-validation-for="Item.ProductId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Item.Quantity" class="form-label"></label>
            <input asp-for="Item.Quantity" class="form-control" type="number" min="1" />
            <span asp-validation-for="Item.Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Item.UnitPrice" class="form-label"></label>
            <input asp-for="Item.UnitPrice" class="form-control" type="number" step="0.01" min="0.01" />
            <span asp-validation-for="Item.UnitPrice" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-page="Index" asp-route-orderId="@Model.Item.OrderId" class="btn btn-secondary">Cancelar</a>
    </form>
</div></div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
