@page "{id:int}"
@model Teste.Pages.Pedidos.EditModel
@{ ViewData["Title"] = "Editar Pedido"; }

<h1>Editar Pedido #@Model.Pedido.OrderId</h1>
<div class="row"><div class="col-md-6">
    <form method="post">
        <input type="hidden" asp-for="Pedido.OrderId" />
        <input type="hidden" asp-for="Pedido.OrderDate" />
        <input type="hidden" asp-for="Pedido.TotalAmount" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Pedido.CustomerName" class="form-label"></label>
            <input asp-for="Pedido.CustomerName" class="form-control" />
            <span asp-validation-for="Pedido.CustomerName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pedido.CustomerEmail" class="form-label"></label>
            <input asp-for="Pedido.CustomerEmail" class="form-control" type="email" />
            <span asp-validation-for="Pedido.CustomerEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pedido.Status" class="form-label"></label>
            <select asp-for="Pedido.Status" class="form-select">
                <option value="Pendente">Pendente</option>
                <option value="Confirmado">Confirmado</option>
                <option value="Enviado">Enviado</option>
                <option value="Cancelado">Cancelado</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div></div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
